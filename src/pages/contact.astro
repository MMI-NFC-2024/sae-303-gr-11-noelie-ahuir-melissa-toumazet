---
import Layout from "../layouts/Layout.astro";
import Bouton from "../components/bouton.astro";
---

<Layout>
    <br />
    <br />
    <br />
    <section class="min-h-screen flex items-center justify-center p-8 bg-gradient-to-br from-[#e1f9ff] to-[#8fe9ff]">

        <div class="bg-white rounded-2xl p-8 sm:p-12 max-w-xl w-full shadow-lg">

        <h1 class="text-3xl font-extrabold text-[#54278f] text-center mb-6">Contactez-nous</h1>

        <p class="text-gray-700 mb-6">Si vous avez des idées à nous partager pour un prochain projet ou des remarques à nous faire, vous pouvez nous contacter ici. Merci beaucoup !</p>

        <form class="flex flex-col gap-4" novalidate>
            <label class="text-[#54278f] font-semibold">
            Pseudo
            <input
                type="text"
                name="name"
                required
                class="mt-2 w-full p-3 border-2 border-[#8fe9ff] rounded-md focus:outline-none focus:ring-2 focus:ring-[#8fe9ff]"
            />
            </label>

            <label class="text-[#54278f] font-semibold">
            Email
            <input
                type="email"
                name="email"
                required
                class="mt-2 w-full p-3 border-2 border-[#8fe9ff] rounded-md focus:outline-none focus:ring-2 focus:ring-[#8fe9ff]"
            />
            </label>

            <label class="text-[#54278f] font-semibold">
            Message
            <textarea
                name="message"
                rows="5"
                required
                class="mt-2 w-full p-3 border-2 border-[#8fe9ff] rounded-md focus:outline-none focus:ring-2 focus:ring-[#8fe9ff] resize-vertical"
            ></textarea>
            </label>
            
            <div class="mt-2 flex justify-center">
            <Bouton>Envoyer</Bouton>
            </div>
        </form>
        </div>
    </section>
</Layout>
