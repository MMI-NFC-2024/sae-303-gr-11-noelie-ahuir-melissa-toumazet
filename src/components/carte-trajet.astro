---
import "leaflet/dist/leaflet.css";
---

<div id="map1" style="height: 600px;"></div>

<script>
  import L from "leaflet";
  import lignesTrain from "../../public/lignesTrain.json";

  // Création de la carte centrée sur la France
  const map = L.map("map1").setView([46.6033, 1.883], 6);

  // Ajout du fond de carte OpenStreetMap
  L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
    attribution: "© OpenStreetMap contributors"
  }).addTo(map);

  // Ajout des lignes ferroviaires (fichier GeoJSON)
  const layer = L.geoJSON(lignesTrain, {
    style: {
      color: "#54278f",
      weight: 2,
      opacity: 0.8
    }
  }).addTo(map);

  // Ajustement automatique du zoom sur les lignes
  map.fitBounds(layer.getBounds(), { maxZoom: 9 });
</script>
